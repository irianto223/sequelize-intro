<!DOCTYPE html>
<html>
  <head>
    <%- include layout/header %>
  </head>
  <body>
    <h2>teacher</h2>
    <%- include layout/navbar %>
    <a href="/teachers/add">Add Teacher</a>
    <br><br>
    <table border="1">
      <thead>
        <tr>
          <th>ID</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>Subject</th>
        </tr>
      </thead>
      <tbody>
        <% dataTeachers.forEach(teacher => { %>
        <tr>
          <td><%= teacher.id %></td>
          <td><%= teacher.first_name %></td>
          <td><%= teacher.last_name %></td>
          <td><%= teacher.email %></td>
          <% if (teacher.SubjectId == undefined) { %>
            <td>unassigned</td>
          <% } else { %>
            <td><%= teacher.Subject.subject_name %></td>
          <% } %>
          <td><a href="/teachers/edit/<%= teacher.id %>">EDIT</a></td>
          <td><a href="/teachers/delete/<%= teacher.id %>">DELETE</a></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
    <br>
    <a href="/">Back</a>
  </body>
</html>
