<!DOCTYPE html>
<html>
  <head>
    <%- include layout/header %>
  </head>
  <body>
    <h2>edit student</h2>
    <p style="color:red"><%= err_msg %></p>
    <form action="/students/edit/<%= dataStudent.id %>" method="post">
      <input type="text" name="first_name" placeholder="First Name" value="<%= dataStudent.first_name %>">
      <input type="text" name="last_name" placeholder="Last Name" value="<%= dataStudent.last_name %>">
      <input type="text" name="email" placeholder="Email" value="<%= dataStudent.email %>">
      <button type="submit" name="submit">Submit</button>
    </form>
    <br>
    <a href="/students">Back</a>
  </body>
</html>
